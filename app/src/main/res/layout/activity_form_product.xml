<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.recyclerview.adapter.activity.FormProductActivity">

        <TextView
            android:id="@+id/label_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="16dp"
            android:text="Adicione novo registro"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/title_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Nome da cesta"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_form" />

        <EditText
            android:id="@+id/description_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tipos de frutas/vegetais"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/title_form"
            app:layout_constraintStart_toStartOf="@+id/title_form"
            app:layout_constraintTop_toBottomOf="@+id/title_form" />

        <EditText
            android:id="@+id/price_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Valor total $"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@+id/description_form"
            app:layout_constraintStart_toStartOf="@+id/description_form"
            app:layout_constraintTop_toBottomOf="@+id/description_form" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_margin="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_form"
            app:layout_constraintVertical_bias="1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>